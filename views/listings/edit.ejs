<%layout("/layouts/boilerplate")%>
    <form method="POST" action="/listings/<%= listing._id%>?_method=put" novalidate class="needs-validation">
      <div class="row mt-3">
        <div class="col-8 offset-2">
        <div class="mb-3">
            <label  class="form-label">place</label>
            <input name="hotel_name" value="<%=listing.hotel_name%>"class="form-control" required>
            <div class="valid-feedback">place looks good</div>
        </div>
        <div>
            <label for="location" class="form-label">Location</label>
            <input name="location" value="<%=listing.location%>" type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter location name</div>   
          </div>
    <div>
        <label  class="form-label">Image Link</label>
        <input name="image_url" type="text" value="<%=listing.image_url%>" name="image" class="form-control" required >
        <div class="invalid-feedback">Please enter a valid url</div>
    </div>
    <div class="row">
            <div class="mb-3 col-md-4">
                <label class="form-label">Food type</label>
                <input  name="food_type" placeholder="enter veg/non veg" value="<%=listing.food_type%>" class="form-control" required>
                <div class="invalid-feedback">please enter food type</div>
            </div>
    <div class="col-md-8">
      <label  class="form-label">Expiry Date</label>
      <input  name="expiry_date" value="<%=listing.Expiry_date%>" type="text" class="form-control" required>
      <div class="invalid-feedback">Please enter Expiry date</div>
    </div>
    </div> 
        <button class="btn btn-dark edit-btn mt-3">edit</button>
            </form>
          </div>
</div>
  