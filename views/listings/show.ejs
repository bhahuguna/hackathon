<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-6 offset-3">
    <h3>Donation details</h3>
  </div>
    <div class="card col-5 offset-3">
        <img src="<%=listing.image_url%>" class="card-img-top show-img" alt="...">
        <div class="card-body">
          <p class="card-text">
         <b><%=listing.hotel_name%></b>
         <br>
          location:<%=listing.location%>
          <br>
          Expires on: <%= new Date(listing.expiry_date).toDateString() %>
          <br>
          Food type:<%=listing.food_type%>
        </p>
        </div>
      </div>
      <div class="btns offset-3">
        <form method="get" action="/listings/<%=listing._id%>/edit">
            <button class="btn btn-dark offset-1 edit-btn">edit</button>
        </form>
        <br>
        <form method="post" action="/listings/<%=listing._id%>?_method=delete">
            <button class="btn btn-dark offset-4">delete</button>
        </form>
      </div>
    </div>

